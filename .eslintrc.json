{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "installedESLint": true,
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],

    "globals": {
        "process": true
    },
    "rules": {
        "no-restricted-syntax": 0,
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": 1,
        "react/react-in-jsx-scope": 1,
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "indent": [
            "error", 2
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
